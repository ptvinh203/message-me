root = true

[*]
charset = utf-8
indent_size = 4
tab_width = 4
end_of_line = lf
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 120

[*.{yml,yaml,jsx,tsx}]
indent_size = 2
tab_width = 2

[*.js]
indent_size = 3
tab_width = 3

[*.html]
indent_size = 2
tab_width = 2
